<h1 class="text-center mb-5"><%= @restaurant.name %> Details</h1>

<div class="container">
  <div class="card mb-4 shadow-lg rounded">
    <div class="card-body">
      <h4 class="card-title mb-3"><%= @restaurant.name %></h4>
      <p class="card-text"><strong>Address:</strong> <%= @restaurant.address %></p>
      <p class="card-text"><strong>Category:</strong> <%= @restaurant.category %></p>
      <p class="card-text"><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
    </div>
  </div>

  <h3 class="mb-4">Reviews</h3>

  <ul class="list-group">
    <% @reviews.each do |review| %>
      <li class="list-group-item">
        <p><%= review.content %></p>
        <span class="badge bg-warning text-dark">Rating: <%= review.rating %> stars</span>
      </li>
    <% end %>
  </ul>

  <div class="text-center mt-4">
    <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary btn-lg' %>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'Back to Restaurants', restaurants_path, class: 'btn btn-secondary btn-lg' %>
  </div>
</div>
